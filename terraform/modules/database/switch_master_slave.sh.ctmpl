#!/bin/bash

master_ip={{ key mysql/master }}

if [ my_ip == "$master_ip" ]; then
    mysql -h 127.0.0.1 -u root -p'change me' <<EOF
    STOP SLAVE;
    RESET MASTER;
EOF
    exit 0
fi

mysql -h 127.0.0.1 -u root -p'change me' <<EOF
STOP SLAVE;
CHANGE MASTER TO
    MASTER_HOST='{{ key mysql/master }}',
    MASTER_PORT=3306,
    MASTER_USER='lamp',
    MASTER_PASSWORD='lamp1234';
START SLAVE;
EOF
