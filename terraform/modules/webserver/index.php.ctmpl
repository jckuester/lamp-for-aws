$server_read = "${db_server_address}";
$server_write = "{{ key "mysql/master" }}";
$username = "lamp";
$password = "lamp1234";
$db = "lamp";

$connection_read = new mysqli($server_read, $username, $password, $db);
$connection_write = new mysqli($server_write, $username, $password, $db);

if ($connection_read->connect_error) {
    die("Connection failed: " . $connection_read->connect_error);
}
print 'Connected successfully to <font color="#ff0000">' . $server_read . '</font> for reads.<br><br>';

if ($connection_write->connect_error) {
    die("Connection failed: " . $connection_write->connect_error);
}
print 'Connected successfully to <font color="#ff0000">' . $server_write . '</font> for writes.<br><br>';

print '<form action="index.php" method="post">
Some text: <input type="text" name="sometext"><br>
<input type="submit">
</form>';

if(isset($_POST['sometext'])) {

    $sql = "INSERT INTO lamp (sometext) VALUES ('" . $_POST['sometext'] . "')";

    if ($connection_write->query($sql) === TRUE) {
        echo "New record '" . $_POST['sometext'] . "' created successfully! <br><br>";
    } else {
        echo "Error: " . $sql . "<br>" . $connection_write->error;
    }
    header("Location: index.php");
    exit();
}

$sql = "SELECT id, sometext FROM lamp";
$result = $connection_read->query($sql);

print "<table border=1>
  <tr>
    <th>ID</th>
    <th>Some text</th>
  </tr>";

if ($result->num_rows > 0) {
    while($row = $result->fetch_assoc()) {
        echo "<tr><td>" . $row["id"]. "</td><td>" . $row["sometext"] . "</td></tr>";
    }
} else {
    echo "0 results";
}

print "</table>";

$connection_read->close();
$connection_write->close();
?>

